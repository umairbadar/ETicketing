<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


        <LinearLayout
            android:id="@+id/layout1"
            android:background="#233588"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnDashboard"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dashboard"
                android:layout_weight="1"
                android:background="#233588"
                android:textColor="#fff"
                android:drawableLeft="@drawable/ic_keyboard_arrow_left_black_24dp"
                />
            <Button
                android:id="@+id/btnlogout"
                android:textColor="#fff"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:background="#233588"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:layout_weight="1"
                />
        </LinearLayout>

            <TextView
                android:id="@+id/txt1"
                android:layout_below="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="QUOTATION DETAIL"
                android:textSize="24dp"
                android:background="#233588"
                android:textColor="#fff"
                android:textStyle="bold"
                android:paddingBottom="5dp" />

        <LinearLayout
            android:layout_below="@id/txt1"
            android:id="@+id/lay1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:orientation="vertical"
            android:background="@drawable/back">

            <TextView
                android:id="@+id/txtID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Quotation ID: "
                android:textColorHint="#233588"
                android:textSize="18dp"
                android:textStyle="bold"
                android:background="@drawable/textlines"
                android:drawableLeft="@drawable/ic_tickets"
                android:drawablePadding="5dp"
                android:padding="7dp"
                />

            <TextView
                android:id="@+id/txtSender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Sender "
                android:textColorHint="#233588"
                android:textSize="18dp"
                android:textStyle="bold"
                android:background="@drawable/textlines"
                android:drawableLeft="@drawable/ic_tickets"
                android:drawablePadding="5dp"
                android:padding="7dp"
                />

            <TextView
                android:id="@+id/txtSite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Site: "
                android:textColorHint="#233588"
                android:textSize="18dp"
                android:textStyle="bold"
                android:background="@drawable/textlines"
                android:drawableLeft="@drawable/ic_tickets"
                android:drawablePadding="5dp"
                android:padding="7dp"/>

            <TextView
                android:id="@+id/txtBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Description:"
                android:textColorHint="#233588"
                android:textSize="18dp"
                android:textStyle="bold"
                android:background="@drawable/textlines"
                android:drawableLeft="@drawable/ic_tickets"
                android:drawablePadding="5dp"
                android:padding="7dp"/>

            <TextView android:id="@+id/txtDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Date:"
                android:textColorHint="#233588"
                android:textSize="18dp"
                android:textStyle="bold"
                android:background="@drawable/textlines"
                android:drawableLeft="@drawable/ic_tickets"
                android:drawablePadding="5dp"
                android:padding="7dp"/>

            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Status:"
                android:textColorHint="#233588"
                android:textSize="18dp"
                android:textStyle="bold"
                android:background="@drawable/textlines"
                android:drawableLeft="@drawable/ic_tickets"
                android:drawablePadding="5dp"
                android:padding="7dp"/>

            <TextView
                android:id="@+id/txtReply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Reply:"
                android:textColorHint="#233588"
                android:textSize="18dp"
                android:textStyle="bold"
                android:background="@drawable/textlines"
                android:drawableLeft="@drawable/ic_tickets"
                android:drawablePadding="5dp"
                android:padding="7dp"/>
        </LinearLayout>

    <LinearLayout
        android:layout_below="@id/lay1"
        android:id="@+id/LayoutAction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="visible">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabRecomm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:clickable="true"
            android:src="@drawable/ic_recommended1"
            android:backgroundTint="#233588"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabApproved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:clickable="true"
            android:src="@drawable/ic_approved1"
            android:backgroundTint="#233588"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabDeclined"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:clickable="true"
            android:src="@drawable/ic_decline1"
            android:backgroundTint="#233588"/>

    </LinearLayout>

</RelativeLayout>

